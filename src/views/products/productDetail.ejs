<!DOCTYPE html>
<html lang="en">
	<%- include('../partials/head') %>

    <body class="productDetails">
        <%- include('../partials/header') %>
        
        <main id="pd_main-container">
            <section>
                <div class="container link-ruta">
                    <nav>
                        <ul>
                            <li>></li>
                            <li><a href="/"><strong>Atras</strong></a></li>
                            <li>/</li>
                            <li><a href="/producto"> <%= product.category.name %> </a></li>
                            <li>/</li>
                            <li><a href="/detalleProducto">Indumentaria</a></li>   
                        </ul>
                    </nav>
                </div>
            </section>
            <section>
                <div class="container">
                    <div class="pd_tit-categoria">Indumentaria para <%= product.category.name %> </div>
                    <div class="pd_producto-img">
                        <div class="pd_prod-left">
                            <div>
                            <img src="/images/<%= product.images[0].name %>" alt="<%= product.name %> "></div>
                        <div>
                            <% for (let i = 1; i < 5; i++) { %>
                            <% if (product.images[i].name != '') { %>
                                <img src="/images/<%= product.images[i].name %>" alt="Foto artículo <%= i+1 %>" class="imageSX">
                            <% } %>
                        <% } %></div>
                    </div>
                        <div class="pd_prod-rigt">
                            <%= product.brand.name %><br>
                            <h1><%= product.name %> </h1>
                            <p><%= product.description %></p>
                            <p class="pd_prod-precio">$<%= product.price %></p>
                            <p><strong>Color <%= product.color.name %> </strong></p>
                            <p><strong>Talle: <%= product.size.name %></strong> </p>
                            <br><br><br>
                            
                            <div class="guias">
                                <div class="guia-left">
                                    <a href="#">
                                        <i class="pe-7s-bookmarks"></i> 
                                        Guia de talles
                                    </a>
                                </div>
                                <div class="guia-right">
                                    <a href="#">
                                        <i class="pe-7s-box1"></i> 
                                        Envios y cambios
                                    </a>
                                </div>
                            </div>
                            <% if (!locals.isLogged) { %>
                            <button type="button" class="pd_gl-cta pd_gl-cta--primary">
                                <span class="pd_gl-cta__content">
                                    <a href="/product/cart">Agregar al Carrito</a>
                                </span>
                            </button>
                            <br><br><br>
                            <% } %>
                            <% if (locals.isLogged) { %>
                            <section class="flex">
                                <button type="button" class="pd_gl-cta pd_gl-cta--primary">
                                    <span class="pd_gl-cta__content">
                                <a class="botonModificar" href="/product/edit/<%= product.id %>">Modificar</a>
                            </span>
                        </button>
                                
                        <form onSubmit="return confirm('¿Estas seguro de querer borrar este producto: <%= product.name %>?') " action="/product/delete/<%= product.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="pd_gl-cta pd_gl-cta--primary p20">
                                <span class="pd_gl-cta__content">Eliminar</span>
                    </button>
                        </form>
                            </section>
                            <% } %>
                        </div>
                    </div>
                </div>
            </section>

            <section id="pd_detalle2">
                <div class="container">
                    <h2>Detalle del Producto</h2>
                    <p><%= product.extended_description %></p>
                </div>
            </section>

        </main>
        <section>
            <div class="container novedades">
                <h2>Podria interesarte</h2>
            </div>

            <div id="carouselExampleInterval" class="carousel slide multi-item-carousel" data-bs-ride="carousel">
                <div class="container">
                    <div class="col">
                        <div class="carousel-inner row w-100 mx-auto">
                            <div class="carousel-item active">
                                <div class="novedad">
                                    <a href="/detalleProducto">
                                        <figure>
                                            <img src="/images/art1.jpg" class="d-block w-100" alt="Buzo canguro Star bicolor WeByte" class="img-fluid">
                                        </figure>
                                        <div class="prod-info">
                                            <div class="section">Hombre</div>
                                            <h4>Buzo Canguro Star bicolor</h4>
                                            <div class="precio">$3.500</div>
                                        </div>
                                    </a>
                                </div>
                                <div class="novedad d-none d-sm-block">
                                    <a href="/detalleProducto">
                                        <figure>
                                            <img src="/images/art2.jpg" class="d-block w-100" alt="Pantalon Joggers con puño WeByte" class="img-fluid">
                                        </figure>
                                        <div class="prod-info">
                                            <div class="section">Hombre</div>
                                            <h4>Pantalon Joggers con puño</h4>
                                            <div class="precio">$3.800</div>
                                        </div>
                                    </a>
                                </div>
                                <div class="novedad d-none d-sm-block d-md-block">
                                    <a href="/detalleProducto">
                                        <figure>
                                            <img src="/images/art3.jpg" class="d-block w-100" alt="Zapatilla colegial con velcro WeByte" class="img-fluid">
                                        </figure>
                                        <div class="prod-info">
                                            <div class="section">Niño</div>
                                            <h4>Zapatilla colegial con velcro</h4>
                                            <div class="precio">$4.800</div>
                                        </div>
                                    </a>
                                </div>
                                <div class="novedad d-none d-sm-block d-md-block">
                                    <a href="/detalleProducto">
                                        <figure>
                                            <img src="/images/art4.jpg" class="d-block w-100" alt="Remera algodon negra WeByte" class="img-fluid">
                                        </figure>
                                        <div class="prod-info">
                                            <div class="section">Hombre</div>
                                            <h4>Remera algodon negra</h4>
                                            <div class="precio">$2.500</div>
                                        </div>
                                    </a>
                                </div>
                            </div>

                            <div class="carousel-item">
                                <div class="novedad">
                                    <a href="/detalleProducto">
                                        <figure>
                                            <img src="/images/detalle-producto1.jpg" class="d-block w-100" alt="Remera algodon negra WeByte" class="img-fluid">
                                        </figure>
                                        <div class="prod-info">
                                            <div class="section">Hombre</div>
                                            <h4>Remera algodon negra</h4>
                                            <div class="precio">$3.500</div>
                                        </div>
                                    </a>
                                </div>
                                <div class="novedad d-none d-sm-block">
                                    <a href="/detalleProducto">
                                        <figure>
                                            <img src="/images/detalle-producto2.jpg" class="d-block w-100" alt="Remera algodon roja WeByte" class="img-fluid">
                                        </figure>
                                        <div class="prod-info">
                                            <div class="section">Hombre</div>
                                            <h4>Remera algodon roja</h4>
                                            <div class="precio">$3.500</div>
                                        </div>
                                    </a>
                                </div>
                                <div class="novedad d-none d-sm-block d-md-block">
                                    <a href="/detalleProducto">
                                        <figure>
                                            <img src="/images/detalle-producto3.jpg" class="d-block w-100" alt="Remera algodon blanca WeByte" class="img-fluid">
                                        </figure>
                                        <div class="prod-info">
                                            <div class="section">Hombre</div>
                                            <h4>Remera algodon blanca</h4>
                                            <div class="precio">$3.500</div>
                                        </div>
                                    </a>
                                </div>
                                <div class="novedad d-none d-sm-block d-md-block">
                                    <a href="/detalleProducto">
                                        <figure>
                                            <img src="/images/detalle-producto4.jpg" class="d-block w-100" alt="Remera algodon azul WeByte" class="img-fluid">
                                        </figure>
                                        <div class="prod-info">
                                            <div class="section">Hombre</div>
                                            <h4>Remera algodon azul</h4>
                                            <div class="precio">$3.500</div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </section>

        <%- include('../partials/newsletter') %>

        <%- include('../partials/prefooter') %>
        
        <%- include('../partials/footer') %>

        <!-- Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

    </body>
</html>