<!DOCTYPE html>
<html lang="en">
	<%- include('../partials/head') %>

    <body class="productDetails">
        <%- include('../partials/header') %>
        
        <main id="pd_main-container">
            <section>
                <div class="container link-ruta">
                    <nav>
                        <ul>
                            <li>></li>
                            <li><a href="/"><strong>Atras</strong></a></li>
                            <li>/</li>
                            <li><a href="/product">Productos</a></li>
                            <li>/</li>
                            <li><a href="/product">Indumentaria</a></li>   
                        </ul>
                    </nav>
                </div>
            </section>
            <section>
                <div class="container">
                    <div class="pd_tit-categoria">Indumentaria para <%= product.category %></div>
                    <div class="pd_producto-img">
                        <div class="pd_prod-left"><img src="/images/<%= product.image %>" alt="Remeras Hombre"></div>
                        <div class="pd_prod-rigt">
                            <h1><%= product.name %></h1>
                            <p><%= product.description %></p>
                            <p class="pd_prod-precio">$<%= product.price %></p>
                            <label for="color" class="pd_label">Elegir Color</label>
                            <div class="check-talles"> 
                                <input type="checkbox" name="color" id="Azul"  value="Azul" <%= product.color.find(color => color == "Azul") ? 'checked' : '' %> disabled >
                            <label for="Azul"> Azul </label> 
                            <input type="checkbox" name="color" value="Blanco" id="Blanco" <%= product.color.find(color => color == "Blanco") ? 'checked' : '' %> disabled >
                            <label for="Blanco"> Blanco</label>
                            <input type="checkbox" name="color" value="Negro" id="Negro" <%= product.color.find(color => color == "Negro") ? 'checked' : '' %>  disabled>
                            <label for="Negro"> Negro </label> 
                            <input type="checkbox" name="color" value="Rojo" id="Rojo" <%= product.color.find(color => color == "Rojo") ? 'checked' : '' %> disabled >
                            <label for="Rojo"> Rojo </label>  
                             </div>
                            <br><br><br>
                            <label for="color" class="pd_label">Elegir Talle</label>
                            <div class="check-talles"> 
                                <input type="checkbox" name="talle" id="S" value="S"  <%= product.talle.find(talle => talle == "S") ? 'checked' : '' %> disabled > 
                                <label for="S">S</label>
                                <input type="checkbox" name="talle" id="M" value="M"  <%= product.talle.find(talle => talle == "M") ? 'checked' : '' %> disabled > 
                                <label for="M">M</label>
                                <input type="checkbox" name="talle" id="L" value="L"  <%= product.talle.find(talle => talle == "L") ? 'checked' : '' %> disabled> 
                                <label for="L">L</label>
                                <input type="checkbox" name="talle" id="XL" value="XL"  <%= product.talle.find(talle => talle == "XL") ? 'checked' : '' %> disabled> 
                                <label for="XL">XL</label>
                            </div>
                            <div class="guias">
                                <div class="guia-left">
                                    <a href="#">
                                        <i class="pe-7s-bookmarks"></i> 
                                        Guia de talles
                                    </a>
                                </div>
                                <div class="guia-right">
                                    <a href="#">
                                        <i class="pe-7s-box1"></i> 
                                        Envios y cambios
                                    </a>
                                </div>
                            </div>
                            <% if (!locals.isLogged) { %>
                            <button type="button" class="pd_gl-cta pd_gl-cta--primary">
                                <span class="pd_gl-cta__content">
                                    <a href="/product/cart">Agregar al Carrito</a>
                                </span>
                            </button>
                            <br>
                            <br>
                            <% } %>
                            <% if (locals.isLogged) { %>
                            <div class="d-flow">
                                <form action="/product/<%= product.id %>/edit" method="get" class="create-form" id="editar">
                                    <button class="pd_gl-cta pd_gl-cta--primary">
                                        Editar
                                    </button>
                                </form>
                                <form action="/product/<%= product.id %>?_method=DELETE" method="POST" class="create-form" id="eliminar">
                                    <button class="pd_gl-cta pd_gl-cta--primary">
                                        <span class="edit_content">
                                            Borrar
                                        </span>
                                    </button>
                                </form>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </section>

            <section id="pd_detalle2">
                <div class="container">
                    <h2>Detalle del Producto</h2>
                    <p><%= product.extended %></p>
                </div>
            </section>

        </main>
        <section>
            <div class="container novedades">
